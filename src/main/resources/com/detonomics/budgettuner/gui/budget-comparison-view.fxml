<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.detonomics.budgettuner.gui.BudgetComparisonController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <top>
        <BorderPane styleClass="details-topbar">
            <left>
                 <HBox alignment="CENTER_LEFT" spacing="10.0">
                      <Button mnemonicParsing="false" onAction="#onBackClick" styleClass="menu-button" text="←" />
                      <Label text="Budget Tuner" styleClass="app-name" />
                 </HBox>
            </left>
            <center>
                <Label text="Σύγκριση Προϋπολογισμών" styleClass="details-title">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>
            </center>
            <padding>
                <Insets bottom="14.0" left="14.0" right="18.0" top="14.0" />
            </padding>
        </BorderPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="details-scroll">
            <content>
                <VBox alignment="TOP_CENTER" spacing="30.0">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>

                    <!-- Year Selection Section -->
                    <HBox alignment="CENTER" spacing="50.0">
                        <VBox alignment="CENTER" spacing="10.0">
                            <Label text="Πρώτο Έτος" styleClass="section-title" />
                            <ComboBox fx:id="year1ComboBox" promptText="Επιλέξτε Έτος" prefWidth="150.0" styleClass="combo-box"/>
                        </VBox>
                        
                        <Label text="VS" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #555;" />

                        <VBox alignment="CENTER" spacing="10.0">
                            <Label text="Δεύτερο Έτος" styleClass="section-title" />
                            <ComboBox fx:id="year2ComboBox" promptText="Επιλέξτε Έτος" prefWidth="150.0" styleClass="combo-box"/>
                        </VBox>
                    </HBox>

                    <Region minHeight="20.0" />

                    <!-- Comparison Display Section -->
                    <VBox spacing="20.0" maxWidth="800.0" alignment="CENTER">
                        
                        <!-- Revenue Comparison -->
                        <VBox styleClass="card" spacing="15.0" alignment="CENTER">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Συνολικά Έσοδα" styleClass="card-title-lg" />
                             
                             <HBox alignment="CENTER" spacing="30.0" maxWidth="Infinity">
                                 <Label fx:id="rev1Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #1976D2;" />
                                 <Label text="vs" style="-fx-font-size: 18px; -fx-text-fill: #888;" />
                                 <Label fx:id="rev2Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #1976D2;" />
                             </HBox>
                        </VBox>

                        <!-- Expense Comparison -->
                        <VBox styleClass="card" spacing="15.0" alignment="CENTER">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Συνολικά Έξοδα" styleClass="card-title-lg" />
                             
                             <HBox alignment="CENTER" spacing="30.0" maxWidth="Infinity">
                                 <Label fx:id="exp1Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #D32F2F;" />
                                 <Label text="vs" style="-fx-font-size: 18px; -fx-text-fill: #888;" />
                                 <Label fx:id="exp2Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #D32F2F;" />
                             </HBox>
                        </VBox>
                        
                    </VBox>

                    <Region minHeight="20.0" />

                    <!-- Analysis Navigation Buttons -->
                     <VBox spacing="15.0" alignment="CENTER" maxWidth="1200">
                        <Label text="Αναλυτική Σύγκριση" styleClass="section-title" />
                        <HBox spacing="20.0" alignment="CENTER">
                            <Button fx:id="revAnalysisBtn" text="Ανάλυση Εσόδων" onAction="#onRevenueAnalysisClick" styleClass="action-btn-secondary" disable="true" prefWidth="320" prefHeight="50"/>
                            <Button fx:id="expAnalysisBtn" text="Ανάλυση Εξόδων" onAction="#onExpenseAnalysisClick" styleClass="action-btn-secondary" disable="true" prefWidth="320" prefHeight="50"/>
                            <Button fx:id="minAnalysisBtn" text="Ανάλυση Κρατικών Φορέων" onAction="#onMinistryAnalysisClick" styleClass="action-btn-secondary" disable="true" prefWidth="320" prefHeight="50"/>
                        </HBox>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
