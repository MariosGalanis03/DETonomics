<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import com.detonomics.budgettuner.gui.LogarithmicAxis?>

<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.detonomics.budgettuner.gui.AnalysisController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <top>
        <BorderPane styleClass="details-topbar">
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onBackClick" styleClass="menu-button" text="←" />
                        <Label text="Budget Tuner" styleClass="app-name" />
                    </children>
                </HBox>
            </left>
            <center>
                <Label fx:id="titleLabel" text="Ανάλυση" styleClass="details-title">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>
            </center>
            <right>
                <javafx.scene.control.TextField fx:id="searchField" promptText="Αναζήτηση..." styleClass="search-bar" prefWidth="250" />
            </right>
            <padding>
                <Insets bottom="14.0" left="14.0" right="18.0" top="14.0" />
            </padding>
        </BorderPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="details-scroll">
            <content>
                <VBox fx:id="contentBox" alignment="TOP_CENTER" spacing="22.0">
                    <padding>
                        <Insets bottom="30.0" left="24.0" right="24.0" top="30.0" />
                    </padding>
                    
                    <!-- Dashboard Hero Section -->
                    <HBox spacing="20.0" alignment="CENTER_LEFT">
                         <children>
                              <!-- Summary Cards -->
                              <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                                   <children>
                                        <!-- Card 1: Total -->
                                        <VBox styleClass="dashboard-card" alignment="CENTER_LEFT" spacing="5">
                                             <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>
                                             <Label text="Σύνολο" styleClass="card-label-sm" />
                                             <Label fx:id="totalAmountLabel" text="— €" styleClass="card-value-lg" />
                                        </VBox>
                                        
                                        <!-- Row for Diff & Perf -->
                                        <HBox spacing="15.0">
                                             <!-- Card 2: Difference -->
                                             <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" spacing="5">
                                                  <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                                                  <Label text="Διαφορά (vs Prev)" styleClass="card-label-sm" />
                                                  <Label fx:id="diffAmountLabel" text="— €" styleClass="card-value-md" />
                                             </VBox>
                                             
                                             <!-- Card 3: Performance -->
                                             <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" spacing="5">
                                                  <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                                                  <Label text="Απόδοση" styleClass="card-label-sm" />
                                                  <Label fx:id="perfLabel" text="— %" styleClass="card-value-md" />
                                             </VBox>
                                        </HBox>
                                   </children>
                              </VBox>
                              


                              <!-- Chart Card -->
                              <VBox styleClass="chart-card" HBox.hgrow="ALWAYS">
                                   <children>
                                        <Label text="Top 5 Κατηγορίες" styleClass="section-title" />
                                        <BarChart fx:id="barChart" legendVisible="false" animated="false" minHeight="250" maxHeight="250">
                                            <xAxis>
                                                <LogarithmicAxis fx:id="logAxis" label="Ποσό (Log Scale)" />
                                            </xAxis>
                                            <yAxis>
                                                <CategoryAxis label="Κατηγορία" />
                                            </yAxis>
                                        </BarChart>
                                   </children>
                              </VBox>
                         </children>
                    </HBox>
                    
                    <VBox styleClass="card">
                        <padding>
                             <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                        <children>
                             <VBox fx:id="itemsBox" spacing="8.0" />
                        </children>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
