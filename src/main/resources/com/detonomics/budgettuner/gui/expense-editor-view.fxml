<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.detonomics.budgettuner.gui.MinistryAnalysisController">
   <children>
      <Label fx:id="titleLabel" text="Επεξεργασία Εξόδων Υπουργείων" styleClass="details-title">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="400.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="expenseList" spacing="5.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </ScrollPane>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveClick" styleClass="action-btn-primary" text="Αποθήκευση Αλλαγών" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelClick" styleClass="action-btn-secondary" text="Ακύρωση" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>