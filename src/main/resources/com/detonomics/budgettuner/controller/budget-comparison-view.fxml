<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.detonomics.budgettuner.controller.BudgetComparisonController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <top>
        <BorderPane styleClass="details-topbar">
            <left>
                 <HBox alignment="CENTER_LEFT" spacing="10.0">
                      <Label text="Budget Tuner" styleClass="app-name" />
                 </HBox>
            </left>
            <center>
                <Label text="Σύγκριση Προϋπολογισμών" styleClass="details-title">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>
            </center>
            <padding>
                <Insets bottom="14.0" left="14.0" right="18.0" top="14.0" />
            </padding>
        </BorderPane>
    </top>

    <center>
        <javafx.scene.layout.StackPane>
            <ScrollPane fitToWidth="true" styleClass="details-scroll">
                <content>
                    <VBox alignment="TOP_CENTER" spacing="30.0">
                        <padding>
                            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                        </padding>

                    <!-- Year Selection Section -->
                    <HBox alignment="CENTER" spacing="50.0">
<VBox alignment="CENTER" spacing="10.0">
                            <Label text="Πρώτος Προϋπολογισμός" style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 24px;"/>
                            <ComboBox fx:id="year1ComboBox" promptText="Επιλέξτε Έτος" prefWidth="450.0" styleClass="combo-box" style="-fx-font-size: 14px;"/>
                        </VBox>
                        
                        <Label text="VS" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #555;" />

                        <VBox alignment="CENTER" spacing="10.0">
                            <Label text="Δεύτερος Προϋπολογισμός" style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 24px;" />
                            <ComboBox fx:id="year2ComboBox" promptText="Επιλέξτε Έτος" prefWidth="450.0" styleClass="combo-box" style="-fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>

                    <Region minHeight="20.0" />

                    <!-- Comparison Display Section -->
                    <VBox spacing="20.0" maxWidth="1200.0" alignment="CENTER">
                        
                        <!-- Revenue Comparison -->
                        <VBox styleClass="card" spacing="15.0" alignment="CENTER">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Συνολικά Έσοδα" styleClass="card-title-lg" />
                             
                             <HBox alignment="CENTER" spacing="30.0" maxWidth="Infinity">
                                 <Label fx:id="rev1Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #1976D2;" />
                                 <Label text="vs" style="-fx-font-size: 18px; -fx-text-fill: #888;" />
                                 <Label fx:id="rev2Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #FF8F00;" />
                             </HBox>
                        </VBox>

                        <!-- Expense Comparison -->
                        <VBox styleClass="card" spacing="15.0" alignment="CENTER">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Συνολικά Έξοδα" styleClass="card-title-lg" />
                             
                             <HBox alignment="CENTER" spacing="30.0" maxWidth="Infinity">
                                 <Label fx:id="exp1Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #1976D2;" />
                                 <Label text="vs" style="-fx-font-size: 18px; -fx-text-fill: #888;" />
                                 <Label fx:id="exp2Label" text="— €" styleClass="card-value-lg" style="-fx-text-fill: #FF8F00;" />
                             </HBox>
                        </VBox>
                        
                    </VBox>

                    <!-- Comparison Charts -->
                    <HBox spacing="20.0" alignment="CENTER" maxWidth="1400.0">
                        <!-- Revenue Chart -->
                        <VBox styleClass="card chart-card" spacing="15.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Έσοδα" styleClass="section-title" />
                             <BarChart fx:id="revenueChart" prefHeight="300.0" legendVisible="true" animated="false">
                                 <xAxis><CategoryAxis /></xAxis>
                                 <yAxis><NumberAxis label="Ποσό (€)" /></yAxis>
                             </BarChart>
                        </VBox>

                        <!-- Expense Chart -->
                        <VBox styleClass="card chart-card" spacing="15.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Έξοδα" styleClass="section-title" />
                             <BarChart fx:id="expenseChart" prefHeight="300.0" legendVisible="true" animated="false">
                                 <xAxis><CategoryAxis /></xAxis>
                                 <yAxis><NumberAxis label="Ποσό (€)" /></yAxis>
                             </BarChart>
                        </VBox>

                        <!-- Balance Chart -->
                        <VBox styleClass="card chart-card" spacing="15.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                             <Label text="Ισοζύγιο" styleClass="section-title" />
                             <BarChart fx:id="balanceChart" prefHeight="300.0" legendVisible="true" animated="false">
                                 <xAxis><CategoryAxis /></xAxis>
                                 <yAxis><NumberAxis label="Ποσό (€)" /></yAxis>
                             </BarChart>
                        </VBox>
                    </HBox>

                    <Region minHeight="50.0" />

                    <!-- Analysis Navigation Buttons -->
                     <VBox spacing="15.0" alignment="CENTER" maxWidth="1200">
                        <HBox spacing="20.0" alignment="CENTER">
                            <Button fx:id="revAnalysisBtn" text="Ανάλυση Εσόδων" onAction="#onRevenueAnalysisClick" styleClass="action-btn-secondary" disable="true" prefWidth="500" prefHeight="150" style="-fx-font-size: 28px;"/>
                            <Button fx:id="expAnalysisBtn" text="Ανάλυση Εξόδων" onAction="#onExpenseAnalysisClick" styleClass="action-btn-secondary" disable="true" prefWidth="500" prefHeight="150" style="-fx-font-size: 28px;"/>
                            <Button fx:id="minAnalysisBtn" text="Ανάλυση Φορέων" onAction="#onMinistryAnalysisClick" styleClass="action-btn-secondary" disable="true" prefWidth="500" prefHeight="150" style="-fx-font-size: 28px;"/>
                        </HBox>
                    </VBox>

                    <Region minHeight="100.0" />

                </VBox>
            </content>
        </ScrollPane>
        
        <!-- Floating Return Button -->
        <Button text="Επιστροφή" onAction="#onBackClick" styleClass="btn-white" 
                prefWidth="150" prefHeight="40" 
                javafx.scene.layout.StackPane.alignment="BOTTOM_RIGHT">
            <javafx.scene.layout.StackPane.margin>
                <Insets bottom="20" right="180" />
            </javafx.scene.layout.StackPane.margin>
        </Button>
        
        <!-- Exit Button -->
        <Button text="Έξοδος" onAction="#onExitClick" styleClass="btn-white" 
                prefWidth="150" prefHeight="40" style="-fx-background-color: #1565C0; -fx-text-fill: white;" 
                javafx.scene.layout.StackPane.alignment="BOTTOM_RIGHT">
            <javafx.scene.layout.StackPane.margin>
                <Insets bottom="20" right="20" />
            </javafx.scene.layout.StackPane.margin>
        </Button>
    </javafx.scene.layout.StackPane>
    </center>

</BorderPane>
