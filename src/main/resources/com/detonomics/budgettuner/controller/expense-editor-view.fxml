<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.detonomics.budgettuner.controller.BudgetModificationController">
   <children>
      <VBox spacing="10.0">
         <children>
            <Label fx:id="titleLabel" text="Τροποποίηση Προϋπολογισμού" styleClass="details-title">
               <font>
                  <Font name="Segoe UI Bold" size="24.0" />
               </font>
            </Label>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <children>
                    <Label text="Τίτλος νέου Προϋπολογισμού:" style="-fx-font-weight: bold; -fx-text-fill: #1565C0; -fx-font-size: 24px;" />
                    <javafx.scene.control.TextField fx:id="sourceTitleField" prefWidth="600" promptText="Τροποποιημένος Προϋπολογισμός..." styleClass="search-bar" />
                </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="modification-tabs">
        <tabs>
          <Tab text="Έσοδα">
            <content>
              <ScrollPane fitToWidth="true" styleClass="edge-to-edge">
                 <content>
                    <VBox fx:id="revenueList" spacing="5.0">
                       <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                    </VBox>
                 </content>
              </ScrollPane>
            </content>
          </Tab>
          <Tab text="Έξοδα">
            <content>
              <ScrollPane fx:id="scrollPane" fitToWidth="true" styleClass="edge-to-edge">
                 <content>
                    <VBox fx:id="expenseList" spacing="5.0">
                       <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                    </VBox>
                 </content>
              </ScrollPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>

      <VBox spacing="5" alignment="CENTER">
          <children>
             <Label fx:id="statusLabel" text="Παρακαλώ περιμένετε, αποθήκευση σε εξέλιξη..." visible="false" style="-fx-text-fill: #1565C0; -fx-font-weight: bold;" />
             <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <children>
                   <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveClick" styleClass="action-btn-secondary" text="Αποθήκευση Αλλαγών" style="-fx-font-size: 18px;" />
                   <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelClick" styleClass="action-btn-secondary" text="Ακύρωση" style="-fx-font-size: 18px;" />
                </children>
             </HBox>
          </children>
           <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>