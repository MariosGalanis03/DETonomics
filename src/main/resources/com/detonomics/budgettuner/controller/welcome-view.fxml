<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.detonomics.budgettuner.controller.WelcomeController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <ScrollPane fx:id="welcomeScrollPane" fitToWidth="true" styleClass="details-scroll" VBox.vgrow="ALWAYS" focusTraversable="true">
        <content>
            <VBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>

                <Region minHeight="20.0" />

                <Label text="Καλοσωρίσατε στο Budget Tuner" styleClass="welcome-title" />
                


                <Region minHeight="25.0" />
                <!-- Charts Section -->
                <VBox spacing="30.0" alignment="CENTER" maxWidth="Infinity">
                     <HBox spacing="10.0" alignment="CENTER">
                                <!-- Revenue Chart -->
                                <VBox spacing="10.0" styleClass="card chart-card" HBox.hgrow="ALWAYS" maxWidth="720.0">
                                    <Label text="Πορεία Εσόδων Ελληνικού Κράτους" styleClass="section-title" />
                                    <BarChart fx:id="revenueChart" prefHeight="450.0" legendVisible="false" animated="false">
                                        <xAxis><CategoryAxis label="Έτος" /></xAxis>
                                        <yAxis><NumberAxis label="Ποσό" /></yAxis>
                                    </BarChart>
                                </VBox>

                                <!-- Expense Chart -->
                                <VBox spacing="10.0" styleClass="card chart-card" HBox.hgrow="ALWAYS" maxWidth="720.0">
                                    <Label text="Πορεία Εξόδων Ελληνικού Κράτους" styleClass="section-title" />
                                    <BarChart fx:id="expenseChart" prefHeight="450.0" legendVisible="false" animated="false">
                                        <xAxis><CategoryAxis label="Έτος" /></xAxis>
                                        <yAxis><NumberAxis label="Ποσό" /></yAxis>
                                    </BarChart>
                                </VBox>

                                <!-- Difference Chart -->
                                <VBox spacing="10.0" styleClass="card chart-card" HBox.hgrow="ALWAYS" maxWidth="720.0">
                                    <Label text="Πορεία Ισοζυγίου Ελληνικού Κράτους" styleClass="section-title" />
                                    <BarChart fx:id="differenceChart" prefHeight="450.0" legendVisible="false" animated="false">
                                        <xAxis><CategoryAxis label="Έτος" /></xAxis>
                                        <yAxis><NumberAxis /></yAxis>
                                    </BarChart>
                                </VBox>
                     </HBox>
                </VBox>

                <Region minHeight="30.0" />



<!-- Top spacer removed to move buttons higher -->

                <!-- Navigation Cards -->
                <HBox spacing="15.0" alignment="CENTER" fillHeight="true">
<Button onAction="#onSelectBudgetClick" styleClass="action-card-btn" HBox.hgrow="ALWAYS" prefWidth="400" prefHeight="280">
                          <graphic>
                               <VBox spacing="10.0" alignment="CENTER" style="-fx-padding: 20;">
                                   <Label text="Επιλογή Υπάρχοντος Προϋπολογισμού" styleClass="action-card-title" 
                                          alignment="CENTER" wrapText="true" textAlignment="CENTER" />
                                   
                                   <Label text="Επιλογή προϋπολογισμού για προβολή εσόδων, εξόδων και δαπανών με διαδραστικά γραφήματα." 
                                          styleClass="action-card-desc" alignment="CENTER"
                                          wrapText="true" textAlignment="CENTER" />
                               </VBox>
                          </graphic>
                     </Button>

<Button onAction="#onCompareBudgetsClick" styleClass="action-card-btn" HBox.hgrow="ALWAYS" prefWidth="400" prefHeight="280">
                          <graphic>
                               <VBox spacing="10.0" alignment="CENTER" style="-fx-padding: 20;">
                                   <Label text="Σύγκριση Προϋπολογισμών" styleClass="action-card-title" 
                                          alignment="CENTER" wrapText="true" textAlignment="CENTER" />

                                   <Label text="Σύγκριση δύο προϋπολογισμών για αναλυτική επισκόπηση διαφορών." 
                                          styleClass="action-card-desc" alignment="CENTER"
                                          wrapText="true" textAlignment="CENTER" />
                               </VBox>
                          </graphic>
                     </Button>

<Button onAction="#onImportNewBudgetClick" styleClass="action-card-btn" HBox.hgrow="ALWAYS" prefWidth="400" prefHeight="280">
                          <graphic>
                               <VBox spacing="10.0" alignment="CENTER" style="-fx-padding: 20;">
                                   <Label text="Εισαγωγή Νέου Προϋπολογισμού" styleClass="action-card-title" 
                                          alignment="CENTER" wrapText="true" textAlignment="CENTER" />
                                   
                                   <Label text="Εισαγωγή νέου προϋπολογισμού από PDF για ανάλυση και επεξεργασία." 
                                          styleClass="action-card-desc" alignment="CENTER"
                                          wrapText="true" textAlignment="CENTER" />
                               </VBox>
                          </graphic>
                     </Button>
                </HBox>
                
                <Region minHeight="30.0" />

                <!-- Statistics Section -->
                <VBox alignment="CENTER_LEFT" maxWidth="1200" styleClass="stats-card">
                     <children>
                          <Label text="Καταγεγραμμένα Στοιχεία Βάσης Δεδομένων" styleClass="section-title" style="-fx-font-size: 32px; -fx-alignment: CENTER-LEFT;"/>
                          <Region minHeight="20.0" />
                          <javafx.scene.layout.GridPane hgap="60.0" vgap="25.0" alignment="CENTER_LEFT">
                               <columnConstraints>
                                    <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" halignment="LEFT" />
                                    <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" halignment="LEFT" />
                               </columnConstraints>
                               <children>
                                    <Label text="Αποθηκευμένοι Προϋπολογισμοί:" styleClass="stats-label-key" style="-fx-font-size: 24px;"/>
                                    <Label fx:id="statsBudgetsLabel" text="-" styleClass="stats-label-value" javafx.scene.layout.GridPane.columnIndex="1" style="-fx-font-size: 24px; -fx-alignment: CENTER-LEFT;"/>
                                    
                                    <Label text="Κατηγορίες Εσόδων:" styleClass="stats-label-key" javafx.scene.layout.GridPane.rowIndex="1" style="-fx-font-size: 24px;"/>
                                    <Label fx:id="statsRevCatsLabel" text="-" styleClass="stats-label-value" javafx.scene.layout.GridPane.columnIndex="1" javafx.scene.layout.GridPane.rowIndex="1" style="-fx-font-size: 24px; -fx-alignment: CENTER-LEFT;"/>
                                    
                                    <Label text="Κατηγορίες Εξόδων:" styleClass="stats-label-key" javafx.scene.layout.GridPane.rowIndex="2" style="-fx-font-size: 24px;"/>
                                    <Label fx:id="statsExpCatsLabel" text="-" styleClass="stats-label-value" javafx.scene.layout.GridPane.columnIndex="1" javafx.scene.layout.GridPane.rowIndex="2" style="-fx-font-size: 24px; -fx-alignment: CENTER-LEFT;"/>
                                    
                                    <Label text="Φορεις:" styleClass="stats-label-key" javafx.scene.layout.GridPane.rowIndex="3" style="-fx-font-size: 24px;"/>
                                    <Label fx:id="statsMinistriesLabel" text="-" styleClass="stats-label-value" javafx.scene.layout.GridPane.columnIndex="1" javafx.scene.layout.GridPane.rowIndex="3" style="-fx-font-size: 24px; -fx-alignment: CENTER-LEFT;"/>
                                    
                                    <Label text="Έξοδα Φορέων:" styleClass="stats-label-key" javafx.scene.layout.GridPane.rowIndex="4" style="-fx-font-size: 24px;"/>
                                    <Label fx:id="statsMinExpLabel" text="-" styleClass="stats-label-value" javafx.scene.layout.GridPane.columnIndex="1" javafx.scene.layout.GridPane.rowIndex="4" style="-fx-font-size: 24px; -fx-alignment: CENTER-LEFT;"/>
                               </children>
                          </javafx.scene.layout.GridPane>
                     </children>
                </VBox>
                
                <Region minHeight="30.0" />
                
                <HBox alignment="CENTER" spacing="20.0" styleClass="about-us-box">
                     <!-- Left Side: Title -->
                     <HBox alignment="CENTER_RIGHT">
                         <Label text="Για Εμάς" styleClass="about-us-title" alignment="CENTER_RIGHT" wrapText="false" minWidth="-Infinity"/>
                     </HBox>
                     
                     <!-- Center: Separator -->
                     <Region style="-fx-background-color: #1565C0; -fx-min-width: 4px; -fx-max-width: 4px;" VBox.vgrow="ALWAYS" />
                     
                     <!-- Right Side: Text -->
                     <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                         <Label wrapText="true" styleClass="about-us-text" 
                                text="Το Budget Tuner φέρνει την επανάσταση στον τρόπο που αλληλεπιδρούμε με τα δημόσια οικονομικά. Είναι η πρώτη πλατφόρμα που δεν προσφέρει απλώς διαφάνεια μέσω της προβολής του Ελληνικού Κρατικού Προϋπολογισμού, αλλά δίνει τη δυνατότητα ουσιαστικής παρέμβασης. Μέσα από καινοτόμα εργαλεία προσομοίωσης, ο χρήστης μπορεί να ανακατανείμει πόρους, να τροποποιήσει δαπάνες και να δει άμεσα τον αντίκτυπο των αποφάσεων. Μετατρέπουμε τα πολύπλοκα δεδομένα σε προσβάσιμη γνώση, δίνοντας στον πολίτη τη δύναμη της κατανόησης." />
                     </HBox>
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</VBox>